<h1> New Laundromat</h1>

<%= form_for @laundromat do |f|%>
  <%= f.label :name %> <br>
  <%= f.text_field :name %><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br>
  
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.label :zipcode %><br>
  <%= f.text_field :zipcode %><br>
  
  <% if flash[:errors] %>
    <ol class="messages">
      <% flash[:errors].each do |error| %>
        <li>
          <%= error %>
        </li>
      <% end %>
    </ol>
  <% end %>
  <br><br>
  <%= f.submit %>

<% end %>

