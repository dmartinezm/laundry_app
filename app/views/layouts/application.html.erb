<!DOCTYPE html>
<html>
  <head>
    <title>LaundryApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <style>
body {
  background-image: url('https://westbankdrycleaning.com/wp-content/uploads/2019/06/Laundry-768x538.jpg');
}
</style>
<header class="menu">
      <div class="container">
        <nav class="right">
          <span class="item">
            <% if @current_customer %>
              Welcome, <%= @current_customer.name %>!
              <%= link_to "Logout", logout_path, method: :delete, class: "item" %>
            <% else %>
              <%= link_to "Login", customer_login_path, class: "item" %>
            <% end %>
          </span>
        </nav>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
